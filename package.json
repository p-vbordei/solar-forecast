{
  "name": "solar-forecast-platform",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node build/index.js",
    "railway:deploy": "npm run db:setup && npm run start",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:setup": "prisma generate && prisma db push",
    "db:init-timescale": "psql $DATABASE_URL -f scripts/init-timescaledb.sql",
    "db:migrate-timescale": "psql $DATABASE_URL -f prisma/migrations/timescaledb_setup.sql",
    "db:validate-timescale": "node scripts/validate-timescaledb.js",
    "db:optimize-timescale": "psql $DATABASE_URL -f scripts/optimize-timescaledb.sql"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-node": "^5.3.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@types/eslint": "^9.0.0",
    "@types/node": "^24.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "postcss": "^8.4.47",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "prisma": "^5.22.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.3"
  },
  "type": "module",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "csv-writer": "^1.6.0",
    "date-fns": "^3.6.0",
    "echarts": "^5.5.1",
    "exceljs": "^4.4.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-svelte": "^0.454.0",
    "pdfkit": "^0.17.2",
    "swagger-ui-dist": "^5.28.1",
    "zod": "^3.23.8"
  }
}
