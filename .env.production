# Production Environment Variables for Railway
# These should be set in Railway dashboard

# Database (Railway PostgreSQL)
DATABASE_URL=${{Postgres.DATABASE_URL}}
DIRECT_URL=${{Postgres.DATABASE_URL}}

# Python Worker (Railway Service)
PYTHON_WORKER_URL=${{PYTHON_WORKER.url}}

# Weather API
OPENWEATHER_API_KEY=${{OPENWEATHER_API_KEY}}

# JWT Secret
JWT_SECRET=${{JWT_SECRET}}

# Application
NODE_ENV=production
PUBLIC_API_URL=${{RAILWAY_PUBLIC_DOMAIN}}
PORT=3000